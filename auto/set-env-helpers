#!/bin/bash -e

GIT_HASH=$(git rev-parse --short HEAD)
TAG_TIME=$(date +'%Y%m%d%H%M')
IMAGE_NAME="devops-joi"
PROJECTNAME=${PROJECTNAME:-joi}

display_status() {
  echo ">>> $1 <<<" 1>&2
}

function terraform() {
  docker run --rm \
  -v $(pwd):/working \
  -w ${WORKDIR} \
  hashicorp/terraform $@
}
